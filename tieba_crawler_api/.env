### `.env.example`
# Database (SQLite by default)
DB_URL=sqlite:///../data/db/tieba.db

# Where to store downloaded images, logs, etc.
DATA_DIR=../data

# Optional login cookies (get_threads can work without)
# BDUSS=mZaejR-cjM2SHF6S3JubkhpNWl4WktKWFgxb2hNVFFFZm5hOWV0ZUlGbUZENjlwRVFBQUFBJCQAAAAAAAAAAAEAAABgQBg1QWJsZXhpAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAIWCh2mFgodpY
ACCOUNTS_FILE=accounts.json
STOKEN=

# Default forum name (can be overridden by CLI --forum)
FORUM=gay
COLLECTION_RULES_JSON={"交友贴":["周","汇总","记录"]}
TIMEZONE=Asia/Shanghai

# Crawler behavior
THREADS_RN=50
INITIAL_HOURS=24
OVERLAP_SECONDS=3600
MAX_PAGES=200

# Tieba client behavior
TRY_WS=0
REQUEST_ATTEMPTS=8
PAGE_SLEEP_MS_MIN=4000
PAGE_SLEEP_MS_MAX=8000

# ---- Relay (auto reply new threads into a target thread) ----
# The thread you want to reply into (target megathread tid)
TARGET_TID=
# Target forum name/fid for the target tid (optional, default = FORUM)
TARGET_FORUM=

# Safer defaults (because add_post is risky)
# link | full
RELAY_MODE=link
 # max posts per run
RELAY_MAX_POSTS=2
RELAY_MIN_INTERVAL_SECONDS=120
RELAY_MAX_TEXT_CHARS=300
RELAY_MAX_IMAGES=3

PORT=443
CORS_ORIGINS=*