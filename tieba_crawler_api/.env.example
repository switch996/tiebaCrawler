### `.env.example`
# Database (SQLite by default)
DB_URL=sqlite:///../data/db/tieba.db

# Where to store downloaded images, logs, etc.
DATA_DIR=../data

# ---- Account Configuration ----
# Option 1: Multiple accounts (recommended for rotation)
# Format: JSON array of {bduss, stoken, label} objects
# ACCOUNTS_JSON=[{"bduss":"BDUSS_VALUE_1","stoken":"STOKEN_VALUE_1","label":"account-1"},{"bduss":"BDUSS_VALUE_2","stoken":"","label":"account-2"},{"bduss":"BDUSS_VALUE_3","stoken":"","label":"account-3"}]

# Option 2: Single account fallback (used only if ACCOUNTS_JSON is empty/unset)
# BDUSS=your_single_bduss_here
# STOKEN=your_single_stoken_here

# Default forum name (can be overridden by CLI --forum)
FORUM=gay
COLLECTION_RULES_JSON={"交友贴":["周","汇总","记录"]}
TIMEZONE=Asia/Shanghai

# Crawler behavior
THREADS_RN=50
INITIAL_HOURS=24
OVERLAP_SECONDS=3600
MAX_PAGES=200

# Tieba client behavior
TRY_WS=0
REQUEST_ATTEMPTS=8
PAGE_SLEEP_MS_MIN=4000
PAGE_SLEEP_MS_MAX=8000

# ---- Relay (auto reply new threads into a target thread) ----
TARGET_TID=
TARGET_FORUM=

# link | full
RELAY_MODE=link
RELAY_MAX_POSTS=2
RELAY_MIN_INTERVAL_SECONDS=120
RELAY_MAX_TEXT_CHARS=300
RELAY_MAX_IMAGES=3

PORT=8889
